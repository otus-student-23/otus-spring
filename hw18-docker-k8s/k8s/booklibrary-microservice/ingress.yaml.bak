apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: k8s-booklibrary-microservice
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /$1
spec:
  ingressClassName: nginx
  rules:
    - http:
        paths:
          - path: /(api/.*)
            #pathType: Prefix
            pathType: ImplementationSpecific
            backend:
              service:
                name: k8s-booklibrary-microservice
                port:
                  number: 8080
